---
import { Image } from "astro:assets";
import logo from '../img/logo.png'
import logoPfk from '../img/Loga/pfks.png' 
import logoWko from '../img/Loga/wko.png'
import logoEko from '../img/Loga/eko.png'
import logoShinKanku from '../img/Loga/shinkanku.png'
---

<footer>

    
        <div class="logo-box">
            <a href=""><Image  src={logo} alt="Logo Ełcki klub karate"></a>
            <a href="https://shinkyokushin.org.pl/"><Image src={logoPfk}
                    alt="Logo Polskiej federacji karate"></a>
            <a href="https://www.european-kyokushin.org"> <Image
              src={logoEko}
                    alt="Logo Europejskiej federacji karate"></a>
            <a href="https://www.wko.or.jp/"> <Image
              src={logoWko}
                    alt="Logo światowej organizacji karate"></a>

        </div>

        <div class="footer-menu">

            <div class="footer-contact">
                <h4>Kontakt</h4>
                <div class="footer-contact-info-box">
                <div class="footer-contact-info"><i class="fa-solid fa-location-dot"></i>
                    <p>19-300 Ełk ul. Bora Komorowskiego 1</p>
                </div>
                <div class="footer-contact-info"><i class="fa-solid fa-phone"></i>
                    <p>503 011 707 </p>
                </div>
                <div class="footer-contact-info"><i class="fa-solid fa-envelope"></i>
                    <p>biuro@karate.elk.pl </p>
                </div>
                <div class="footer-contact-info"><a href="https://www.facebook.com/karate.elk"><i class="fa-brands fa-facebook"></i>
                    <p>Ełcki Klub Karate Kyokushin</p></a>
                </div>
              </div>
            </div>
          

            <div class="footer-img">
                <Image src={logoShinKanku} alt="Logo shinkyokushin">
            </div>
        </div>

        <div class="footer-info">
            <p>Ełcki Klub Karate Shinkyokushin</p>
            <p>1978 - 2023</p>
        </div>

</footer>

